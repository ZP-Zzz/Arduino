Adafruit_SSD1306 display = Adafruit_SSD1306(128, 64, &Wire);

void setup() {
   // SSD1306_SWITCHCAPVCC = generate display voltage from 3.3V internally
  display.begin(SSD1306_SWITCHCAPVCC, 0x3C);
  display.setTextColor(SSD1306_WHITE); //开启像素点发光
  display.clearDisplay();  //清理缓冲区

  
  display.setTextSize(1); //文字尺寸
  display.setCursor(0,0);//定位坐标x，y
  display.println("zhang peng~~~~~~~~~");

  display.drawBitmap(5, 10, str1, 16, 16,1); 
  display.drawBitmap(21, 10, str2, 16, 16,1); 
  display.drawBitmap(45, 10, str3, 16, 16,1); 
  display.display(); //显示缓冲区
  delay(1000);
  
}

void loop() 
{
  display.clearDisplay();  //清理缓冲区
  for(int i=0;i<100;i++)
  { 
    display.setCursor(i,0);
    display.println("123");
    display.display(); //显示缓冲区
    delay(20);
    display.clearDisplay();  //清理缓冲区
  }
  while(1)
  {  
    display.drawBitmap(0, 0, logo, 128, 64,1); 
    display.display(); //显示缓冲区 
  }


}
